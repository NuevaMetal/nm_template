<header id="top" class="container">
	<div class="nm-header row">
		<div class="site-title col-xs-12 col-md-10 col-lg-8" title="{{blog_name}}">
			<a itemprop="url" href="/"><img src="{{template_url}}/public/img/NM_header.png"></a>
		</div>
		
		<div id="banner-base-header" class="banner col-xs-12 col-md-2 col-lg-4 ">
			{{> partials/banners/base_header }}
		</div>
	</div>
	<div class="row titular ">
		<span class="col-xs-12 frase">
			<i class="fa fa-quote-left"></i> {{#transu}}tutorial.a_un_artista_de_verdad{{/transu}} <i class="fa fa-quote-right"></i>
		</span>
	</div>
	<div class="redes-sociales hidden-xs">
		<a class="btn btn-social-icon btn-sm btn-google-plus mostrar-menu-lateral" 
				data-toggle="tooltip" data-placement="right" title="{{#transu}}inicio{{/transu}}">
			<i class="fa fa-home"></i>
		</a><br>
		<a class="btn btn-social-icon btn-sm btn-twitter" href="https://twitter.com/NuevaMetal" 
				target="_blank" data-toggle="tooltip" data-placement="right" title="@NuevaMetal">
			<i class="fa fa-twitter"></i>
		</a><br>
		<a class="btn btn-social-icon btn-sm btn-facebook" href="https://www.facebook.com/nuevametal" 
				target="_blank" data-toggle="tooltip" data-placement="right"  title="/NuevaMetal">
			<i class="fa fa-facebook "></i>
		</a><br>
		<a class="btn btn-social-icon btn-sm btn-google-plus" href="https://plus.google.com/+NuevametalWeb" 
				rel="publisher" target="_blank" data-toggle="tooltip" data-placement="right" title="+NuevaMetalWeb">
			<i class="fa fa-google-plus "></i>
		</a><br>
	</div>
</header>
<div id="page" class="container" url="{{template_url}}/ajax.php" user="{{current_user.ID}}">
	
	<div id="alertas-popup"></div>
	<div class="col-xs-12">
		<div id="menu-principal">{{!> menu/principal }}</div>
		<div id="alertas" class="col-xs-12">
			{{$ alertas }} {{/ alertas }}
		</div>
	</div>
	
	<div id="super" class="row">
		{{# current_user }}
			<div id="menu-lateral" class="hidden-xs col-sm-2 animated fadeInLeft"></div>
		{{/ current_user }}
		{{^ current_user }}
			<div id="menu-perfil" class="col-xs-12 perfil-login titular hidden-xs">
				{{> menu/perfil/_login }}
			</div>
		{{/ current_user }}
	    <div id="content" class="col-xs-12 {{#current_user}}col-sm-10{{/current_user}}">
	    	{{$ content }} Content {{/content }}
	    </div>
	</div>
	<div id="menu-footer" class="row"></div>
</div>
{{^ current_user }}
<!-- Modal -->
	<div id="modal-login" class="modal fade must-log-in-modal" tabindex="-1" role="dialog" 
			aria-labelledby="myLargeModalLabel" aria-hidden="true" >
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">
						<span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
					</button>
					<h4 class="modal-title"><span class="titulo">{{#transu}}iniciar_sesion{{/transu}}</span></h4>
				</div>
	    		<div class="modal-body">
					{{> menu/perfil/_login }}
				</div>
			</div>
		</div>
	</div>
	
	<button id="must-log-in-modal" type="button" class="hidden btn btn-primary" data-toggle="modal" 
		data-target=".must-log-in-modal"></button>
	
	<script>
		$(document).on('click', '.must-log-in a', function(e){
			e.preventDefault();
			$('#must-log-in-modal').click();
		});
	</script>
{{/ current_user }}

{{$ scripts }} {{/ scripts }}