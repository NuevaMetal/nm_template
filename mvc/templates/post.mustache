{{#post}}
<div class="post" itemscope itemType="http://schema.org/BlogPosting">

	<h1 class="page-header" itemprop="headline">{{{title}}}</h1>

	{{>post/_info}}	
	
	<div class="content text-center col-xs-12" itemprop="articleBody">
		{{{content}}}
	</div>

	{{>post/_tags}}
	{{>post/_meta}}

	{{> post/_informar}}

	<div class="comment-form col-xs-12">
		{{{comment_form}}}
	</div>
	{{#has_comments}}
	<div class="comments col-xs-12">
		{{#comments}}
			{{> post/_comment}}
		{{/comments}}
	</div>
	{{/has_comments}}
</div>
{{/post}}