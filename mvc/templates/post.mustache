{{#post}}
<div class="post ">

	<h1 class="page-header">{{{title}}}</h1>
		
	{{>post/_info}}
	
	<div class="content text-center col-xs-12">
		{{{content}}}
	</div>
		
	{{>post/_tags}}
	{{>post/_meta}}
	
	<div class="comment-form col-xs-12">
		{{{comment_form}}}
	</div>
	{{#has_comments}}
	<div class="comments col-xs-12">
		{{#comments}}
			{{> post/_comment}}
		{{/comments}}
	</div>
	{{/has_comments}}
</div>
{{>post/_pager}}
{{/post}}