{{#post}}
<div class="post-content" url="{{template_url}}/ajax.php">
	<div class="col-xs-12 col-sm-9 post" itemscope itemType="http://schema.org/BlogPosting">
	
		<h1 class="page-header titular" itemprop="headline">{{{getTitulo}}}</h1>
	
		{{> post/_info}}	
		
		<div class="content text-center col-xs-12" itemprop="articleBody">
			{{{getContent}}}
		</div>
	
		{{> post/_tags}}
		<hr>
		{{> post/_meta_autor}}
	
		{{> post/_informar}}
	
		<div id="comment-form" class="col-xs-12"> 
			{{{getFormComentarios}}}
		</div>
		
		{{# getTotalComentarios }}
		<div id="comments" class="col-xs-12">
			<h3 class="col-xs-12">{{#transu}}comentarios{{/transu}}</h3>
			{{#getComentarios}}				
				{{> post/_comment}}
			{{/getComentarios}}
		</div>
		{{/ getTotalComentarios }}
	</div>

	<div id="sidebar" class="col-xs-12 col-sm-3 text-center"> 
	    {{> post/_sidebar }}
	</div>
</div>
{{/post}}