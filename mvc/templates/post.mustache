{{#post}}

<div class="col-xs-12 col-sm-9">
	<div class="post" itemscope itemType="http://schema.org/BlogPosting">
	
		<h1 class="page-header titular" itemprop="headline">{{{getTitulo}}}</h1>
	
		{{>post/_info}}	
		
		<div class="content text-center col-xs-12" itemprop="articleBody">
			{{{getContent}}}
		</div>
	
		{{>post/_tags}}
		
		{{>post/_meta_autor}}
	
		{{> post/_informar}}
	
		<div class="comment-form col-xs-12"> 
			{{{getFormComentarios}}}
		</div>
		
		<div class="comments col-xs-12">
			{{#getComentarios}}
				{{> post/_comment}}
			{{/getComentarios}}
		</div>
	</div>
</div>

<div id="sidebar" class="col-xs-12 col-sm-3 text-center"> 
    {{> post/_sidebar }}
</div>

{{/post}}