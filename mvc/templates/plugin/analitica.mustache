<div id="page" class="container-fluid">
	<h1><i class="fa fa-terminal"></i> Analítica y seguimiento de usuarios </h1>

	<h3><i class="fa fa-bar-chart"></i> Total de usuarios registrados / día</h3>
	<div id="total-users" style="height: 250px; margin-bottom:50px;"></div>

	<div class="col-xs-12">
		<h3><i class="fa fa-line-chart"></i> Visitas totales / día</h3>
		<div id="total-visitas" style="height: 250px; margin-bottom:90px;"></div>
	</div>
	
	<div class="col-xs-12">
		<h3><i class="fa fa-area-chart"></i> Número de entradas vistas / hora </h3>
		<div id="total-visitas-horas" style="height: 250px; margin-bottom:110px;"></div>
	</div>

	<div class="col-xs-12">
		<h3><i class="fa fa-line-chart"></i> Visitas por usuario / día</h3>
		<div id="total-visitas-users" style="height: 250px; margin-bottom:50px;"></div>
	</div>
	
	{{#hay_logueados_hoy}}
		<div class="col-xs-12">
			<h4 class="titular">Logueados hoy: {{total_logueados_hoy}}</h4>
			{{#logueados_hoy}}
				<span class="col-xs-3"><a href="{{url}}">{{nombre}}</a></span>
			{{/logueados_hoy}}
		</div>
	{{/hay_logueados_hoy}}
	
	{{#hay_logueados_ayer}}
		<div class="col-xs-12">
			<h4 class="titular">Logueados ayer: {{total_logueados_ayer}}</h4>
			{{#logueados_ayer}}
				<span class="col-xs-3"><a href="{{url}}">{{nombre}}</a></span>
			{{/logueados_ayer}}
		</div>
	{{/hay_logueados_ayer}}
	
</div>

<script src="{{public_directory}}/third/raphael/raphael.min.js"></script>
<script src="{{public_directory}}/third/morris/morris.js"></script>
<script src="{{public_directory}}/js/analitica.js"></script>

<script>
	$(document).ready(function() {
		var url = "{{template_url}}/admin_ajax.php?submit=analitica&tabla=total-users&cant=50";
		pintarMorris("total-users", url);

		url = "{{template_url}}/admin_ajax.php?submit=analitica&tabla=total-visitas&cant=50";
		pintarMorris("total-visitas", url);

		url = "{{template_url}}/admin_ajax.php?submit=analitica&tabla=total-visitas-users&cant=50";
		pintarMorris("total-visitas-users", url);

		url = "{{template_url}}/admin_ajax.php?submit=analitica&tabla=total-visitas-hora&cant=50";
		pintarMorrisHoras("total-visitas-horas", url);

	});
</script>
