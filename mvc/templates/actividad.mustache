{{#user}}
	<div id="actividad">
		<h1 class="titular">{{#transu}}actividad{{/transu}}</h1>
	
		<div class="col-xs-12 {{#conSidebar}}col-md-9{{/conSidebar}}">	
			<!-- Nav tabs -->
			<ul class="nav nav-tabs titular" role="tablist">
				<li class="active"><a href="#actividades" role="tab" data-toggle="tab">
					Actividades (<span class="cant">{{getTotalActividades}}</span>)</a>
				</li>
				<li><a href="#actividades-propias" role="tab" data-toggle="tab">
					Tu Actividad (<span class="cant">{{getTotalActividadesPropias}}</span>)</a>
				</li>
				<li><a href="#seguidores" role="tab" data-toggle="tab">
					Seguidores (<span class="cant">{{getTotalSeguidores}}</span>)</a>
				</li>
				<li><a href="#siguiendo" role="tab" data-toggle="tab">
					Siguiendo (<span class="cant">{{getTotalSiguiendo}}</span>)</a>
				</li>
				<li><a href="#puntos" role="tab" data-toggle="tab">
					Puntos (<span class="cant">{{getTotalPuntos}}</span>)</a>
				</li>
			</ul>

			<!-- Tab panes -->
			<div class="tab-content">
				<div class="tab-pane active col-xs-12" id="actividades">
					<h4 class="titular">{{#trans}}actividad.aqui_ver_actividad{{/trans}}</h4>
					
					<div class="actividades-content">
						{{# getActividades }}
							{{> actividad/_fila }}
						{{/ getActividades }}
						{{^ getActividades }}
							{{#trans}}actividad.sin_actividad{{/trans}}.
						{{/ getActividades }}
					</div>
					
					{{> actividad/_btn_mostrar_mas }}
				</div>

				<div class="tab-pane col-xs-12" id="actividades-propias">
					<h4 class="titular">{{#trans}}actividad.actividades_propias{{/trans}}</h4>
					
					<div class="actividades-content">
						{{# getActividadesPropias }}
							{{> actividad/_fila }}
						{{/ getActividadesPropias }}
						{{^ getActividadesPropias }}
							{{#trans}}actividad.sin_actividad{{/trans}}.
						{{/ getActividadesPropias }}
					</div>
				
					{{> actividad/_btn_mostrar_mas }}
				</div>
				
				<div class="tab-pane col-xs-12 seguidores" id="seguidores">
					<h4 class="titular">{{#trans}}actividad.usuarios_que_te_estan_siguiendo{{/trans}}</h4>
					
					<div class="actividades-content">
						{{# getSeguidores }}
							{{> actividad/_usuario_fila }}
						{{/ getSeguidores }}
					</div>
							
					{{> actividad/_btn_mostrar_mas }}
				</div>
					
				<div class="tab-pane col-xs-12" id="siguiendo">
					<h4 class="titular">{{#trans}}actividad.usuarios_que_estas_siguiendo{{/trans}}</h4>
					
					<div class="actividades-content">
						{{# getSiguiendo }}
							{{> actividad/_usuario_fila }}
						{{/ getSiguiendo }}
					</div>
					
					{{> actividad/_btn_mostrar_mas }}
				</div>
				
				<div class="tab-pane col-xs-12" id="puntos">
					<h4 class="titular">{{#trans}}actividad.aqui_ver_puntos{{/trans}}.</h4>
					
					<table class="table table-striped">
						<tr>
							<th>{{#transu}}tipo{{/transu}}</th>
							<th>{{#transu}}valor{{/transu}}</th>
							<th>{{#transu}}cantidad{{/transu}}</th>
							<th>{{#transu}}total{{/transu}}</th>
						<tr>
						{{# getPuntos }}
							<tr>
								<td><i class="fa fa-2x {{getIcoByTipo}} col-xs-2"></i> <span class="col-xs-10">{{ getTipoTrans }}</span></td>
								<td>{{ getPuntosByTipo }}</td>
								<td>{{ total }}</td>
								<td>{{ getTotalPuntosByTipo }}</td>
							</tr>
						{{/ getPuntos }}
						{{^ getPuntos }}
							<tr>{{#trans}}actividad.sin_puntos{{/trans}}.</tr>
						{{/ getPuntos }}
					</table>

				</div>

			</div>
		</div>		
		
		{{#conSidebar}}
		<div class="sidebar col-xs-12 col-md-3">
			{{> actividad/_sidebar}}
		</div>
		{{/conSidebar}}
	</div>
{{/user}}
{{^user}}
	{{> error }}
{{/user}}