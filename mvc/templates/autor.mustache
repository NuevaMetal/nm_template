<div class="autor">
	{{#user}}
		{{#current_user.isEditor}}
			{{> admin/_autor }}
		{{/current_user.isEditor}}
		
		<div class="row img-header">
			{{#getImgHeader}}
				<img alt="{{display_name}}" src="{{{getImgHeader}}}" >
			{{/getImgHeader}}
			{{^getImgHeader}}
				<img class="sin-thumbnail" >
			{{/getImgHeader}}
			{{#isCurrentUser}}
				<div class="text-right col-xs-12 btn-img-header">
					<a class="btn btn-default" href="/wp-admin/profile.php#img-header" target="_blank">{{#transu}}cambiar{{/transu}}</a>
				</div>
			{{/isCurrentUser}}
		</div>
		<div class="content">
			<div class="col1 col-xs-12 col-sm-4">
				{{> autor/perfil/_col1}}
			</div>
			<div class="col2 col-xs-12 col-sm-8">
				{{> autor/perfil/_col2}}
			</div>
		</div>
	{{/user}}
	{{#posts}}
		{{> busqueda}}
	{{/posts}}
</div>