<div class="row principal-login">
	<div class="col-xs-12">	
		<form name="loginform" id="loginform" action="{{login_url}}"
			method="post" role="form" class="form">
				<div class="col-xs-12 ">
					<input type="text" name="log" id="user_login"
						data-toggle="tooltip" data-placement="left" title="{{#transu}}usuario_title{{/transu}}"
						class="form-control" value="" size="20" placeholder="{{#transu}}usuario{{/transu}}">
				</div>
				<div class="col-xs-12">
				 <input type="password" name="pwd" id="user_pass"
						data-toggle="tooltip" data-placement="left" title="{{#transu}}contrasena{{/transu}}"
				 	class="form-control" value="" size="20"  placeholder="{{#transu}}contrasena{{/transu}}">
				</div>
				<div class="login-submit col-xs-12 ">
					<input type="submit" name="wp-submit" id="wp-submit"
						class="btn btn-danger form-control" value="{{#transu}}acceder{{/transu}}" >
				</div>
				 <div class="checkbox col-xs-12 ">
				 	<label><input name="rememberme" type="checkbox" id="rememberme" 
				    	 value="forever"> {{#transu}}recuerdame{{/transu}}</label>
				</div>
				<div class="col-xs-12 "> 
					<a class="form-control btn btn-default" href="/wp-login.php?action=register" 
						data-toggle="tooltip" data-placement="left" title="{{#transu}}registrarse_title{{/transu}}">
					<i class="fa fa-mail-forward"></i> {{#transu}}registrarse{{/transu}}</a>
				</div>
				<div class="col-xs-12 "> 
					<a class="form-control btn btn-default" href="/wp-login.php?action=lostpassword" 
						data-toggle="tooltip" data-placement="left" title="{{#transu}}contrasena_perdida{{/transu}}">
					<i class="fa fa-question-circle "></i> {{#transu}}contrasena{{/transu}}?</a>
				</div>
		</form>
	</div>
</div>