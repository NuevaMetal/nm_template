{{#current_user}}
<div class="row">

	<div class="col-xs-12 col-sm-2 col-md-1">
		<a href="{{getPerfilUrl}}" alt="{{display_name}}">
			<img alt="{{display_name}}" src="{{getAvatarPerfil}}" class="avatar">
		</a>
	</div>

	<div class="menu-acciones col-xs-12 col-sm-10 col-md-11">
		<div class="title text-center col-xs-8 col-sm-12 col-md-3">
			
			<span class="col-xs-9 col-md-12 text-center title-user-name">{{#transu}}bienvenido{{/transu}} <br class="visible-md visible-lg">
				<a href="{{getPerfilUrl}}">{{display_name}}</a>
			</span> <br class="visible-md visible-lg">
			
			<a class="col-xs-3 col-md-12 url-redirect" href="/wp-login.php?action=logout&amp;">
				<span class="hidden-lg"><i class="fa fa-exclamation-circle"></i> {{#transu}}salir{{/transu}}</span>
				<span class="visible-lg"><i class="fa fa-exclamation-circle"></i> {{#transu}}cerrar_sesion{{/transu}}</span>
			</a>
		</div>

		<div class="acciones text-center col-xs-12 col-sm-12 col-md-9">
			<div class="list-group">
				{{#isSuscriptor}}
					{{^isSuscriptorRechazado}}
					  <a class="list-group-item col-xs-12 col-sm-8" href="/tutorial#publica"
					  		title="{{#trans}}user.quieres_escribir{{/trans}}">
						<i class="fa fa-pencil"></i> {{#trans}}user.quieres_escribir{{/trans}}
					  </a>
					{{/isSuscriptorRechazado}}
				{{/isSuscriptor}}
			   {{#canColaborador}}
				    <a class="list-group-item col-xs-12 col-sm-4" href="/wp-admin/edit.php" target="_blank"
				    		data-toggle="tooltip" data-placement="top"
				    		title="{{#transu}}user.tus_posts{{/transu}}: {{total_posts | formatear_numero}}">
				  		<i class="fa fa-files-o"></i> posts
					</a>
					<a class="list-group-item col-xs-12 col-sm-4" href="/wp-admin/post-new.php" target="_blank"
							data-toggle="tooltip" data-placement="top"
							title="{{#transu}}escribir_title{{/transu}}">
						<i class="fa fa-pencil"></i> {{#transu}}escribir{{/transu}}
					</a>
				{{/canColaborador}}
				<a class="list-group-item col-xs-12 col-sm-4" href="/favorites" 
						data-toggle="tooltip" data-placement="top"
						title="{{total_favoritos | formatear_numero}} {{#transu}}total{{/transu}}">
			  		<i class="fa fa-star"></i> {{#transu}}favoritos{{/transu}}
				</a>
				<a class="list-group-item col-xs-12 col-sm-4" href="/activity" 
						data-toggle="tooltip" data-placement="top"
						title="{{total_actividad | formatear_numero}} {{#transu}}total{{/transu}}">
					<span><i class="fa fa-bell"></i> {{#transu}}actividad{{/transu}}</span>
				</a>
				<a class="list-group-item col-xs-12 col-sm-4 {{#total_mensajes}}nuevas{{/total_mensajes}}" href="/messages"
						data-toggle="tooltip" data-placement="top" 
						title="{{total_mensajes | formatear_numero}} {{#transu}}mensajes.sin_leer{{/transu}}">
			  		<i class="fa fa-file-text-o"></i> {{#transu}}mensajes{{/transu}}
				</a>
				<a class="list-group-item col-xs-12 col-sm-4" href="{{getPerfilUrl}}"
						data-toggle="tooltip" data-placement="top"
						title="{{#transu}}perfil_title{{/transu}}">
					<i class="fa fa-user"></i> {{#transu}}perfil{{/transu}}
				</a>
				{{# canEditor }}
					<a class="list-group-item col-xs-12 col-sm-4 {{#total_revisiones}}nuevas{{/total_revisiones}}" href="/revisions"
							data-toggle="tooltip" data-placement="top" 
							title="{{total_revisiones | formatear_numero}} {{#transu}}pendientes{{/transu}}">
						<i class="fa fa-clipboard "></i> {{#transu}}revisiones{{/transu}}
					</a>
					<a class="list-group-item col-xs-12 col-sm-4 {{#total_pendientes}}nuevas{{/total_pendientes}}" href="/pending-users"
							data-toggle="tooltip" data-placement="top" 
							title="{{total_pendientes | formatear_numero}} {{#transu}}user.usuarios_pendientes{{/transu}}">
						<i class="fa fa-users "></i> {{#transu}}pendientes{{/transu}}</span>
					</a>
					<a class="list-group-item col-xs-12 col-sm-4" href="/blocked-users" 
							data-toggle="tooltip" data-placement="top"
							title="{{total_bloqueados | formatear_numero}} {{#transu}}user.usuarios_bloqueados{{/transu}}">
						<i class="fa fa-close"></i> {{#transu}}bloqueados{{/transu}}
					</a>
					{{# isAdmin }}
						<a class="list-group-item col-xs-12 col-sm-4" href="/analytics">
							<i class="fa fa-bar-chart "></i> {{#transu}}analitica{{/transu}}
						</a>
					{{/ isAdmin }}
				{{/ canEditor }}
			</div>
		</div>
	</div>
</div>
{{/current_user}}