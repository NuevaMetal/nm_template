{{< base }}
	
	{{$ alertas }}	
		{{# current_user }}	
			{{# getAlertas }}
				{{> partials/alertas/_danger }}
			{{/ getAlertas }}
		{{/ current_user }}
	{{/ alertas }}

	{{$ content }}
		<div class="col-xs-12">
			<div id="banner-home-top" class="banner col-xs-12">
				{{> partials/banners/home_top }}
			</div>
		</div>
		
		<div id="carousel" class="col-xs-12 text-center">
			<i class="fa fa-spinner fa-spin fa-1x hidden "></i>
		</div>
		<div id="home" class="text-center">
			{{# bandas}}
			<section id="bandas" class="col-xs-12 seccion-posts">
				{{> home/_seccion_posts }}
			</section>
			{{/ bandas}}
		
			{{# videos}}
			<div id="videos" class="col-xs-12 seccion-posts">
				{{> home/_seccion_posts }}
			</div>
			{{/ videos}}
		
			{{#criticas}}
			<div id="criticas" class="col-xs-12 seccion-posts">
				{{> home/_seccion_posts }}
			</div>
			{{/criticas}}
		
			{{# noticias }}
			<div id="noticias" class="col-xs-12 col-lg-6 seccion-posts">
				{{> home/_seccion_posts }}
			</div>
			{{/ noticias }}

			{{# conciertos }}
			<div id="conciertos" class="col-xs-12 col-lg-6 seccion-posts">
				{{> home/_seccion_posts }}
			</div>
			{{/ conciertos }}
			
			{{#cronicas}}
			<div id="cronicas" class="col-xs-12 seccion-posts">
				{{> home/_seccion_posts }}
			</div>
			{{/cronicas}}
		
			{{# entrevistas }}
			<div id="entrevistas" class="col-xs-12 seccion-posts">
				{{> home/_seccion_posts }}
			</div>
			{{/ entrevistas }}
		</div>
	{{/ content }}
{{/ base }}