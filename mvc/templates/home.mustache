<div id="mostrar-mas" >
	{{#previous_posts_link}}<p class="col-xs-6 text-left">{{{previous_posts_link}}}</p>{{/previous_posts_link}}
	{{#next_posts_link}}<p class="col-xs-{{#previous_posts_link}}6{{/previous_posts_link}}{{^previous_posts_link}}12{{/previous_posts_link}} text-right">{{{next_posts_link}}}</p>{{/next_posts_link}}
</div>

{{#posts}}
	<div class="post col-xs-12 col-sm-6 col-md-6 col-lg-3">
	    <h2><a href="{{permalink}}">{{{title}}}</a></h2>
	    <p>{{time}}</p>
	    {{#featured_image_url_medium}}
	    	<img src="{{featured_image_url_medium}}" />
	    {{/featured_image_url_medium}}
	    {{{excerpt}}}
	    {{> tags}}
	    {{> categories}}
	</div>
{{/posts}}


