<section id="home">
	<ul class="pager">
	  {{#previous_posts_link}}<li class="previous">{{{previous_posts_link}}}</li>{{/previous_posts_link}}
	  {{#next_posts_link}}<li class="next">{{{next_posts_link}}}</li>{{/next_posts_link}}
	</ul>
	
	<article class="posts-bandas">
		<section>
			<header class="page-header col-xs-12">
				<h1>Bandas <small>Discografías</small></h1>
			</header>
			{{#posts}}
				{{>home/_post}}
			{{/posts}}
		</section>
	</article>

	{{#videos}}
	<article class="posts-videos">
		<section>
		<header class="page-header col-xs-12">
			<h1>Vídeos <small>Últimos videoclips, singles, covers...</small></h1>
		</header>		
			{{>home/_video}}		
		</section>
	</article>
	{{/videos}}
</section>