{{< base }}
	
	{{$ alertas }}	
		{{# current_user }}	
			{{# getAlertas }}
				{{> partials/alertas/_danger }}
			{{/ getAlertas }}
		{{/ current_user }}
	{{/ alertas }}

	{{$ content }}
		<div class="col-xs-12">
			<div id="banner-home-top" class="banner col-xs-12">
				{{> partials/banners/home_top }}
			</div>
		</div>
		
		<div id="carousel" class="col-xs-12 text-center">
			<i class="fa fa-spinner fa-spin fa-1x hidden "></i>
		</div>
		<div id="home" class="text-center">
			{{# bandas}}
			<section id="bandas" class="col-xs-12 seccion-posts">
				<a href="{{home_url}}/category/bandas">
					<div class="col-xs-12 header-seccion">
						<img src="{{template_url}}/public/img/bandas.jpg" alt="{{#transu}}bandas{{/transu}}"/>
					</div>
				</a>
				<div class="seccion_contenido"><i class="fa fa-spinner fa-spin fa-2x "></i></div>
			</section>
			{{/ bandas}}
		
			{{# videos}}
			<div id="videos" class="col-xs-12 seccion-posts">
				<a href="{{home_url}}/category/videos">
