{{#user}}
<h3 id="avatar">{{#transu}}user.img_avatar{{/transu}}</h3>
<table class="form-table img-avatar">
	<tr>
		<th><img alt="{{display_name}}" src="{{getAvatarPerfil}}" ></th>
		<td style="width: 50px;" id="user-avatar"></td>
		<td>
			<p> <label for="{{KEY_USER_IMG_AVATAR}}">Upload Avatar</label>
				<input type="file" name="{{KEY_USER_IMG_AVATAR}}" id="{{KEY_USER_IMG_AVATAR}}">
			</p>
			<p>
				<span class="description">{{#transu}}introduce_tu [que:{{#trans}}user.img_avatar{{/trans}}]{{/transu}}</span><br>
			</p>
			<div class="btn-img-avatar">
				<button class="btn btn-default quitar-avatar" url="{{template_url}}/ajax.php"
						que="quitar-avatar" user="{{user.ID}}">{{#transu}}user.eliminar_avatar{{/transu}}</button>
			</div>
		</td>
	</tr>
</table>
{{/user}}