<div class="fila bs-callout bs-callout-warning tipo-me-gusta">
	{{#getUser}}
		{{> user/actividad/_user}}
	{{/getUser}}
	<span class="texto col-xs-1">
		<i class="fa fa-thumbs-o-up fa-3x"></i>
	</span>
	<span class="texto col-xs-7">
		<span class="time col-xs-12 text-left">
			{{> user/actividad/_time }}
		</span>
		{{#getUser.isCurrentUser}}
			{{#trans}}actividad.te_ha_gustado{{/trans}} <a href="{{getQue.getUrl}}">{{getQue.post_title}}</a>.
		{{/getUser.isCurrentUser}}
		{{^getUser.isCurrentUser}}
			A <a href="{{getUser.getPerfilUrl}}">{{getUser.display_name}}</a> 
			{{#trans}}actividad.le_ha_gustado{{/trans}} 
			<a href="{{getQue.getUrl}}">{{getQue.post_title}}</a>.
		{{/getUser.isCurrentUser}}		
	</span>
	<span class="post-thumbnail col-xs-2">
		<a href="{{getQue.getUrl}}">
			{{#getQue.getThumbnail}}
				<img src="{{.}}" alt="{{getQue.post_title}} thumbnail"/>
			{{/getQue.getThumbnail}}
			{{^getQue.getThumbnail}}
				<img class="sin-thumbnail" alt="{{getQue.post_title}} thumbnail"/>
			{{/getQue.getThumbnail}}
		</a>
	</span>
</div>