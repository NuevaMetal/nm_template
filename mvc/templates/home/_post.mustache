<article class="post col-xs-12 col-sm-6 {{^reducido}}col-lg-3{{/reducido}}" itemscope itemType="http://schema.org/BlogPosting">

	<div class="thumbnail">
		<div class="info titular">
	    	<span class="post-time">{{getTime}} </span>
		    {{#trans}}por{{/trans}} <span class="post-author"><a href="{{getAutor.getPerfilUrl}}">{{getAutor.display_name}}</a></span>
		</div>
        <div class="caption">
			<div class="col-xs-6 text-left">
				{{# getTotalMeGustas }}
					<span class="total-me-gustas titular">
						<i class=" fa fa-star"></i> <span class="cant">{{ getTotalMeGustas }}</span>
					</span>
				{{/ getTotalMeGustas }}
			</div>
			<div class="col-xs-6 text-right">
				{{# getTotalComentarios }}
					<a href="{{getUrl}}#comments">
						<span class="total-comentarios titular">
							<i class=" fa fa-comment"></i> <span class="cant">{{ getTotalComentarios }}</span>
						</span>
					</a>
				{{/ getTotalComentarios }}
			</div>
        </div>
		<a href="{{getUrl}}" title="{{{getTitulo}}}">
			{{> post/_thumbnail_medium }}
		</a>
    </div>
    <h2 class="post-title titular">
		<a href="{{getUrl}}" title="{{{getTitulo}}}">{{{getTituloCorto}}}</a>
    </h2>
	{{#getGenero}}
		<b class="titular">{{#transu}}genero{{/transu}}</b>: {{getGenero}} <br>
	{{/getGenero}}
	{{#getPais}}
		<b class="titular">{{#transu}}pais{{/transu}}</b>: {{getPais}} <br>
	{{/getPais}}
	{{^getGenero}}
		{{{ getExcerpt }}
	{{/getGenero}}
</article>