<article class="post banda col-xs-12 col-sm-6 col-md-6 col-lg-3">
    <h2><a href="{{permalink}}">{{{title}}}</a></h2>
    <p>{{time}} - {{{author_link}}}</p>
    <div class="info">
      <div class="categories">
	    	{{> categories}}
	    </div>
    </div>
    
	<a href="{{permalink}}" class="thumbnail">
		{{#featured_image_url_medium}}
			<img src="{{featured_image_url_medium}}" />		
		{{/featured_image_url_medium}}	
		{{^featured_image_url_medium}}
			<img class="sin-thumbnail" src="#" />
		{{/featured_image_url_medium}}
	</a>
    
    {{{excerpt}}}
    <div class="tags">
    	{{> tags}}
    </div>
</article>