<article class="post col-xs-12 col-sm-6 {{^reducido}}col-lg-3{{/reducido}}" 
	itemscope itemType="http://schema.org/BlogPosting">

	<div class="thumbnail">
		<div class="info">
	    	<span class="post-time">{{time}} </span>
		    {{#trans}}por{{/trans}} <span class="post-author">{{{author}}} </span>
		</div>
        <div class="caption">
            <div class="tags">{{>tags}}</div>
            <a href="{{permalink}}" type="button" class="btn btn-default btn-xs">{{#transu}}leer_mas{{/transu}}</a>
        </div>
	    <a href="{{permalink}}" title="{{{title}}}">
			{{#featured_image_url_medium}}
				<img class="img-responsive" src="{{featured_image_url_medium}}" />
			{{/featured_image_url_medium}}
			{{^featured_image_url_medium}}
				<img class="img-responsive sin-thumbnail" src="#" />
			{{/featured_image_url_medium}}
		</a>
    </div>
    <h2 class="post-title">
		<a href="{{permalink}}" title="{{{title}}}">{{{title}}}</a>
    </h2>
	{{{ excerpt }}}
</article>