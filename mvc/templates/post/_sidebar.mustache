{{#hayUsersQueGustan}}
<div class="sidebar-item col-xs-12 users-gustan">
	<h3 class="titular"><i class="fa fa-star"></i> {{#transu}}post.le_gusto_a{{/transu}}</h3>
	<hr>
	<section>
	{{#getUsersQueGustanLimitado}}
		{{#lista}}
			<div class="row">
				{{#isSuscriptor}}
					<div class="col-xs-3">
						{{{getAvatarIco}}}
					</div>
					<div class="col-xs-9">
						{{display_name}}	
					</div>
				{{/isSuscriptor}}
				{{^isSuscriptor}}
					<div class="col-xs-3">
						<a href="{{getPerfilUrl}}">{{{getAvatarIco}}}</a>
					</div>
					<div class="col-xs-9">
						<a href="{{getPerfilUrl}}">{{display_name}}</a>
					</div>
				{{/isSuscriptor}}
			</div>
		{{/lista}}
		{{#mas}}
			<div class="col-xs-12">
				{{#trans}}y{{/trans}} {{mas}} {{#trans}}mas{{/trans}}.
			</div>
		{{/mas}}
	{{/getUsersQueGustanLimitado}}
	</section>
</div>
{{/hayUsersQueGustan}}

{{#haySimilares}}
<div class="sidebar-item col-sm-12 similares">
	<h3 class="titular"><i class="fa fa-group"></i> {{#trans}}sidebar.entradas_similares{{/trans}}</h3>
	<hr>
	<section>
	{{#getSimilares}}
		<article class="col-xs-6 col-sm-12 col-md-6 text-center sidebar-post-similar">
		    <a href="{{getUrl}}" title="{{{getTitulo}}}"> 
		    	{{#getThumbnails}}
					{{#medium}}
						<img class="img-responsive" src="{{medium}}" />
					{{/medium}}
					{{^medium}}
						<img class="img-responsive sin-thumbnail"/>
					{{/medium}}
				{{/getThumbnails}}		
				{{^getThumbnails}}
					<img class="img-responsive sin-thumbnail"/>
				{{/getThumbnails}}
			</a>
			<p class="sidebar-post-similar-title titular">{{{getTituloCorto}}}</p>
		</article>
	{{/getSimilares}}
	</section>
</div>
{{/haySimilares}}