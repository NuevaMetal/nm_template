{{#getAutor}}
<div class="post-meta page-header row">
	<div itemprop="author" itemscope itemtype="http://schema.org/Person">
		<h2>
		<div class="col-xs-12 " >
			<a href="{{getPerfilUrl}}" itemprop="image">
				<img alt="{{display_name}}" src="{{getAvatar}}" class="avatar">
			</a>
			<a href="{{getPerfilUrl}}" itemprop="name">{{display_name}}</a>
			{{#isTipoUsuario}}				
				<small itemprop="jobTitle">{{getRol}}</small>
			{{/isTipoUsuario}}
			{{^isTipoUsuario}}
				<small itemprop="jobTitle">{{getTipoTrans}}</small>
			{{/isTipoUsuario}}
		</div>
		</h2>

		<div class="col-xs-12">	
			<div class="bs-callout bs-callout-default" itemprop="description">
				{{#getDescripcion}}
					<h4>{{#transu}}biografia{{/transu}}</h4>
				{{/getDescripcion}}
				<p itemprop="description">
					{{getDescripcionCorta}}
					{{^getDescripcion}}
						{{#transu}}user.no_hay_info_perfil{{/transu}}
					{{/getDescripcion}}
				</p>
			</div>
		</div>
	</div>
</div>
{{/getAutor}}