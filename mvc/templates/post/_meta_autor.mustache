{{#getAutor}}
<div id="post-meta" class="col-xs-12" itemprop="author" itemscope itemtype="http://schema.org/Person" >
	<h5 class="titular">{{#transu}}autor{{/transu}}</h5>

	<div class="col-xs-12 col-sm-4 col-md-2" itemprop="image" >
		<a href="{{getPerfilUrl}}">
			<img alt="{{display_name}}" src="{{getAvatar}}" class="avatar">
		</a>
	</div>
	<div class="col-xs-12 col-sm-8 col-md-4">
		<h2 class="autor">
			<a href="{{getPerfilUrl}}" data-toggle="tooltip" data-placement="top" 
				title="{{getTotalPuntos | formatear_numero}} {{#trans}}puntos{{/trans}}">
				<span itemprop="name">{{display_name}}</span>
			</a>			
		</h2>
		<small itemprop="jobTitle">
			{{# isTipoUsuario }} {{getRol}} {{/ isTipoUsuario }}
			{{^ isTipoUsuario }} {{getTipo | transu}} {{/ isTipoUsuario }}
		</small>
	</div>
	<div class="col-xs-12 col-sm-12 col-md-6 descripcion" itemprop="description">
		{{getDescripcionCorta | ucfirst}}
	</div>
</div>
{{/getAutor}}