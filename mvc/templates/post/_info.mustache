<div class="info row">
	<div class="col-xs-9">
		<meta itemprop="datePublished" content="{{date_published}}"/>
		<span class="post-time">{{time}}</span>
		{{#trans}}por{{/trans}} <span class="post-author"><a href="{{user_posts_url}}">{{display_name}}</a></span>
		{{#has_categories}} {{#trans}}en{{/trans}} <span class="categories">{{> post/_categories}}</span>{{/has_categories}} 
	</div>
	<div class="col-xs-3 text-right">		
		{{> partials/_redes_sociales}}
	</div>
</div>

{{#edit_post}}
	<a href="{{{edit_post}}}" class="btn btn-default btn-editar col-xs-10 col-xs-push-1">
		<i class="fa fa-edit"></i> {{#transu}}editar{{/transu}}
	</a>
{{/edit_post}}
