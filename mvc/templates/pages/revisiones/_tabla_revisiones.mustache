<h4 class="titular">{{#transu}}estado{{/transu}}: {{ sEstado | transu }}</h4>
<table class=" table table-condensed table-responsive table-striped">
	<thead>
		<tr>
			<th class="col-xs-1">NÂº</th>
			<th class="col-xs-3">{{#transu}}entrada{{/transu}}</th>
			<th class="col-xs-3">{{#transu}}fecha{{/transu}}</th>
			<th class="col-xs-4">{{#transu}}usuarios{{/transu}}</th>
			<th class="col-xs-1">{{#transu}}acciones{{/transu}}</th>
		</tr>
	</thead>
	<tbody>
	{{# lista }}
		<tr>
	  		<td>{{ num }}</td>
			<td>
				<a href="{{ getPost.getUrl }}" target="_blank">{{{ getPost.getTitulo }}}</a><br>
				<span class="post-thumbnail ">
					<a href="{{getPost.getUrl}}">
						{{#getPost.getThumbnail}}
							<img src="{{.}}" alt="{{getPost.getTitulo}} thumbnail" style="height:auto; width: 100px;"/>
						{{/getPost.getThumbnail}}
						{{^getPost.getThumbnail}}
							<img class="sin-thumbnail" alt="{{getPost.getTitulo}} thumbnail"/>
						{{/getPost.getThumbnail}}
					</a>
				</span>
			</td>
			<td><i class="fa fa-clock-o"></i> {{updated_at}}</td>
			<td> {{> pages/revisiones/_users_tabla }}</td>
			<td>
				{{# isPendiente }}
					<button class="btn btn-success btn-sm btn-block dispara-revision" 
							que_id="{{post_id}}" submit="revision" estado="{{ ESTADO_CORREGIDO }}"> 
						{{#transu}}corregido{{/transu}}
					</button>
				{{/ isPendiente }}
				{{^ isPendiente }}
					<button class="btn btn-info btn-xs btn-block dispara-revision" 
							que_id="{{post_id}}" submit="revision" estado="{{ ESTADO_PENDIENTE }}">
						{{#transu}}pendiente{{/transu}}
					</button>
					<button class="btn btn-warning btn-xs btn-block dispara-revision" 
							que_id="{{post_id}}" submit="revision" estado="{{ ESTADO_BORRADO }}">
						{{#transu}}borrar{{/transu}}
					</button>
				{{/ isPendiente }}
			</td>
		</tr>
   	{{/ lista }}
   	</tbody>
</table>