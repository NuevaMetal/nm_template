				{{/ isPendiente }}
				{{^ isPendiente }}
					<button class="btn btn-info btn-sm btn-block dispara-revision" 
							que_id="{{post_id}}" submit="revision" estado="{{ ESTADO_PENDIENTE }}">
						{{#transu}}pendiente{{/transu}}
					</button>
					<button class="btn btn-warning btn-sm btn-block dispara-revision" 
							que_id="{{post_id}}" submit="revision" estado="{{ ESTADO_BORRADO }}">
						{{#transu}}borrar{{/transu}}
					</button>
				{{/ isPendiente }}
			</td>
		</tr>
   	{{/ lista }}
   	</tbody>
