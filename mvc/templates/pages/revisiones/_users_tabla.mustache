	<thead>
		<tr>
			<th>{{#transu}}nombre{{/transu}}</th>
			<th>{{#transu}}acciones{{/transu}}</th>
		</tr>
	</thead>
	<tbody>	
	{{# getUsers }}
	<tr>
		<td><i class="fa fa-user"></i> <a href="{{ getPerfilUrl }}" target="_blank">{{ user_login }}</a>
		</td>
		<td>
		{{^ isAdmin }}
			{{# estaBaneadoDeRevisiones }}
				<span class="label label-default label-block">{{#transu}}baneado{{/transu}}</span>
			{{/ estaBaneadoDeRevisiones }}
			{{^ estaBaneadoDeRevisiones }}
				<button class="btn btn-danger btn-xs btn-block dispara-revision"
						que_id="{{ID}}" submit="revision-ban" estado="{{ USER_BANEADO }}">
					{{#transu}}banear{{/transu}}
				</button>
			{{/ estaBaneadoDeRevisiones }}
