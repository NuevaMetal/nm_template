{{< base }}
	{{$ content }}
	<div id="contacto" class="pagina">
		<div class="col-xs-12">
			<div class="col-xs-12">
				<h1 class="titular">{{#transu}}contacto{{/transu}}</h1>
				<ul class="errores">
				{{# errores }}
					<li class="error">{{.}}</li>
				{{/ errores }}
				</ul>
				{{# mostrarFormulario }}
					<form class="form-horizontal" role="form" method="post">
						<input type="hidden" name="nonce" value="{{nonce}}">
						
						<fieldset>
    						<legend>{{#transu}}mensajes.de{{/transu}}</legend>
							<div class="form-group">
								<label for="nombre" class="col-md-2 control-label">
									 {{#transu}}nombre{{/transu}}*
								</label>
								<div class="col-md-10">
									<input type="text" class="form-control" id="nombre" name="nombre" placeholder="{{#transu}}nombre{{/transu}}" 
									{{#current_user}}value="{{getNombreCompleto}}"{{/current_user}} required>
								</div>
							</div>
							<div class="form-group">
								<label for="email" class="col-md-2 control-label">
									 {{#transu}}email{{/transu}}*
								</label>
								<div class="col-md-10">
									<input type="email" class="form-control" id="email" name="email" placeholder="{{#transu}}email{{/transu}}" 
									{{#current_user}}value="{{getEmail}}"{{/current_user}} required>
								</div>
							</div>
							<div class="form-group">
								<label for="web" class="col-md-2 control-label">
									 {{#transu}}web{{/transu}}
								</label>
								<div class="col-md-10">
									<input type="text" class="form-control" id="web" name="web" placeholder="{{#transu}}web{{/transu}}" 
									{{#current_user}}value="{{getUrl}}"{{/current_user}} required>
								</div>
							</div>
						</fieldset>
						
						<fieldset>
    						<legend>{{#transu}}mensajes.para{{/transu}}</legend>
							<div class="form-group">
								<label for="departamento" class="col-md-2 control-label">
									{{#transu}}departamento{{/transu}}
								</label>
								<div class="col-md-10">
									{{#toDepart}}
									<select class="form-control" id="departamento" name="departamento">
										<option value="publicidad" {{#publicidad}}selected{{/publicidad}}>
											{{#transu}}comunicacion_y_publicidad{{/transu}}</option>
										<option value="general" {{#general}}selected{{/general}}>
											{{#transu}}general{{/transu}}</option>
										<option value="desarrollo" {{#desarrollo}}selected{{/desarrollo}}>
											{{#transu}}desarrollo_web{{/transu}}</option>
									</select>
									{{/toDepart}}
								</div>
							</div>
						</fieldset>
						
						<fieldset>
    						<legend>{{#transu}}mensaje{{/transu}} </legend>
							<div class="form-group">
								<label for="mensaje" class="col-md-2 control-label">
									{{#transu}}mensaje{{/transu}}*
								</label>
								<div class="col-md-10">
						 			<textarea class="form-control" id="mensaje" name="mensaje" rows="3"
						 					 placeholder="{{#transu}}mensajes.placeholder{{/transu}}" required></textarea>
						 		</div>
							</div>
							<div class="form-group">
								<label for="captcha" class="col-md-2 control-label">Catpcha*</label>
								<div class="col-md-10">
									<div><i class="fa fa-quote-left"></i> {{captcha}} <i class="fa fa-quote-right"></i></div>
						 			<input type="text" class="form-control" id="captcha" name="captcha" 
						 					placeholder="{{#transu}}introduce_el_catpcha{{/transu}}" required>
						 		</div>
							</div>
						</fieldset>
						
						<div class="form-group">
							<div class="col-md-offset-2 col-md-10">
					    		<button type="submit" class="btn btn-default">{{#transu}}enviar{{/transu}}</button>
					 		</div>
						</div>
						
					</form>
				{{/ mostrarFormulario }}
				{{^ mostrarFormulario }}
					<p>{{#transu}}mensajes.enviado_exito{{/transu}}</p>
				{{/ mostrarFormulario }}
			</div>
		</div>	
	</div>
	{{/ content }}
{{/ base }}