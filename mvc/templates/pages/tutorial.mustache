	<script>
		$(document).on('click', 'img', function(e){
			e.preventDefault();
			var modal = $('#myModal');
			modal.find('img').attr('src', $(this).attr('src'));
			modal.find('.titulo').text( $(this).attr('alt'));
		});
	</script>
