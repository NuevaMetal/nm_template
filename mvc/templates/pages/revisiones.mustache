{{< base }}

	{{$ content }}	
		<div id="revisiones" class="padre">
			<h1 class="titular">{{#transu}}revisiones{{/transu}}</h1>
			
			<!-- Nav tabs -->
			<ul class="nav nav-tabs titular" role="tablist">
				<li class="active"><a href="#pendientes" role="tab" data-toggle="tab">
					{{#transu}}pendientes{{/transu}} {{#total_pendientes}}(<span class="cant">{{total_pendientes}}</span>){{/total_pendientes}}</a>
				</li>
				<li><a href="#corregidas" role="tab" data-toggle="tab">
					{{#transu}}corregidas{{/transu}} {{#total_corregidas}}(<span class="cant">{{total_corregidas}}</span>){{/total_corregidas}}</a>
				</li>
				<li><a href="#baneados" role="tab" data-toggle="tab">
					{{#transu}}baneados{{/transu}} {{#total_baneados}}(<span class="cant">{{total_baneados}}</span>){{/total_baneados}}</a>
				</li>
			</ul>
	
			<!-- Tab panes -->
			<div class="tab-content">			
				<div class="tab-pane active col-xs-12" id="pendientes">
					<h4 class="titular">{{#trans}}pendientes{{/trans}}</h4>
					{{# pendientes }}
						{{> pages/revisiones/_tabla_revisiones }}
					{{/ pendientes }}
				</div>
				
				<div class="tab-pane col-xs-12" id="corregidas">
					<h4 class="titular">{{#trans}}pendientes{{/trans}}</h4>
					{{# corregidas }}
						{{> pages/revisiones/_tabla_revisiones }}
					{{/ corregidas }}
				</div>
				
				<div class="tab-pane col-xs-12" id="baneados">
					<h2> Baneos <small>Impide a un usuario volver a enviar notificaciones</small></h2>
					{{# baneados }}
						<table class="table table-hover table-condensed table-responsive">
							<thead>
								<tr>
									<th class="col-xs-1">NÂº</th>
									<th class="col-xs-3">Usuario</th>
									<th class="col-xs-2">Fecha</th>
									<th class="col-xs-4">Editor</th>
									<th class="col-xs-2">Acciones</th>
								</tr>
							</thead>
							<tbody>
							{{# lista }}
							  	<tr>
							  		<td>{{ num }}</td>
									<td><a href="{{ getUser.getPerfilUrl }}" target="_blank">{{ getUser.user_login }}</a></td>
									<td>{{ created_at }}</td>
									<td><a href="{{ getEditor.getPerfilUrl }}" target="_blank">{{ getEditor.user_login }}</a></td>
									<td>
										<button class="btn btn-danger btn-xs btn-block dispara-revision"
												que_id="{{getUser.ID}}" submit="revision-ban" estado="{{ USER_DESBANEADO }}">
											{{#transu}}desbanear{{/transu}}
										</button>
									</td>
								</tr>
						   	{{/ lista }}
						   	</tbody>
						</table>
					{{/ baneados }}
				</div>
				
			</div>
			
		</div>
	{{/ content }}
	
{{/ base }}