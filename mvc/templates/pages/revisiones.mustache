{{< base }}

	{{$ content }}	
		<div id="revisiones" class="padre">
			<h1 class="titular">{{#transu}}revisiones{{/transu}}</h1>
			
			<!-- Nav tabs -->
			<ul class="nav nav-tabs titular" role="tablist">
				<li class="active"><a href="#pendientes" role="tab" data-toggle="tab">
					{{#transu}}pendientes{{/transu}} (<span class="cant">{{total_pendientes}}</span>)</a>
				</li>
				<li><a href="#revisadas" role="tab" data-toggle="tab">
					{{#transu}}revisadas{{/transu}}</a>
				</li>
				<li><a href="#baneados" role="tab" data-toggle="tab">
					{{#transu}}baneados{{/transu}}</a>
				</li>
			</ul>
	
			<!-- Tab panes -->
			<div class="tab-content">			
				<div class="tab-pane active col-xs-12" id="pendientes">
					<h4 class="titular">{{#trans}}pendientes{{/trans}}</h4>
					{{# pendientes }}
						{{> pages/revisiones/_tabla_revisiones }}
					{{/ pendientes }}
				</div>
				
				<div class="tab-pane col-xs-12" id="revisadas">
					<h4 class="titular">{{#trans}}pendientes{{/trans}}</h4>
					{{# revisadas }}
						{{> pages/revisiones/_tabla_revisiones }}
					{{/ revisadas }}
				</div>
				
				<div class="tab-pane col-xs-12" id="baneados">
					<h2> Baneos <small>Impide a un usuario volver a enviar notificaciones</small></h2>
					<table class="table table-hover table-condensed table-responsive">
						<thead>
							<tr>
								<th class="col-xs-1">NÂº</th>
								<th class="col-xs-3">Usuario</th>
								<th class="col-xs-2">Fecha</th>
								<th class="col-xs-4">Editor</th>
								<th class="col-xs-2">Acciones</th>
							</tr>
						</thead>
						<tbody>
						{{# baneos }}
						  	<tr>
						  		<td>{{ num }}</td>
								<td><a href="{{ user.getPerfilUrl }}" target="_blank">{{ user.user_login }}</a></td>
								<td>{{ updated_at }}</td>
								<td><a href="{{ editor.getPerfilUrl }}" target="_blank">{{ editor.user_login }}</a></td>
								<td>
									<button class="btn btn-danger btn-xs btn-block dispara-revision"
											que_id="{{user.ID}}" submit="revision-ban" estado="{{ estado }}" url="{{ template_url }}/ajax.php">
										{{#transu}}desbanear{{/transu}}
									</button>
								</td>
							</tr>
					   	{{/ baneos }}
					   	</tbody>
					</table>
				</div>
				
			</div>
			
		</div>
	{{/ content }}
	
{{/ base }}